# Day 20: PIP & APIs ‚Äì Retrieving Real-World Data
# Using the 'requests' library to communicate with external web APIs.

import requests
import json

# 1. API Endpoint (Example: Random User Generator)
URL = "https://randomuser.me/api/"

try:
    # 2. Sending a GET request to retrieve data
    response = requests.get(URL)
    
    # 3. Checking if the request succeeded
    if response.status_code == 200:
        data = response.json()
        
        # 4. Pulling out specific details
        user = data['results'][0]
        name = f"{user['name']['first']} {user['name']['last']}"
        location = user['location']['city']
        
        print(f"‚úÖ Data retrieved successfully for: {name}")
        print(f"üåç City: {location}")
        
        # 5. Storing the fetched external data locally (Building on Day 19)
        with open("latest_user.json", "w") as f:
            json.dump(user, f, indent=4)

except Exception as e:
    print(f"‚ùå Failed to connect to API: {e}")
